{
  "author": "wattry",
  "bin": {
    "tsconfig": "./dist/index.js"
  },
  "dependencies": {
    "commander": "14.0.1"
  },
  "description": "Base TS configure for new projects",
  "devDependencies": {
    "@eslint/config-inspector": "1.3.0",
    "@eslint/js": "9.36.0",
    "@stylistic/eslint-plugin": "5.4.0",
    "@types/node": "22.18.6",
    "eslint": "9.36.0",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.1",
    "vitest": "3.2.4"
  },
  "files": [
    ".env",
    ".gitignore",
    "dist/**/*",
    "eslint.config.js",
    "LICENSE",
    "tsconfig.json",
    "vitest.config.js"
  ],
  "license": "Apache-2.0",
  "name": "@wattry/tsconfig",
  "scripts": {
    "build": "tsc --pretty --esm --project ./tsconfig.json",
    "build:pack": "pnpm build && pnpm pack",
    "clean": "rm -rf node_module dist",
    "dev": "node --no-warnings --loader ts-node/esm --watch=./src ./src/index.ts",
    "lint": "eslint  --config ./eslint.config.js --no-warn-ignored src/**/*.ts",
    "lint:config": "pnpx @eslint/config-inspector@latest --config ./eslint.config.js",
    "lint:fix": "eslint  --config ./eslint.config.js --fix --no-warn-ignored src/**/*.ts",
    "prepare": "husky",
    "test:ci": "vitest . --silent --collectCoverage --coverageDirectory='./coverage' --ci --reporters=default --reporters=junit --watchAll=false --passWithNoTests",
    "test:watch": "vitest . --passWithNoTests --watch",
    "test": "vitest . --passWithNoTests",
    "upgrade:all": "pnpm update --latest"
  },
  "type": "module",
  "version": "1.0.0"
}