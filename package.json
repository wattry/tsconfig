{
  "name": "@wattry/tsconfig",
  "version": "1.0.0",
  "description": "Base TS configure for new projects",
  "type": "module",
  "bin": {
    "wattry-tsconfig": "./dist/index.js"
  },
  "files": [
    "dist",
    ".gitignore",
    "eslint.config.js",
    "jest.config.js",
    "LICENSE",
    "tsconfig.cjs.json",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "concurrently 'rm -rf ./dist' 'pnpm:build:cjs' 'pnpm:build:esm'",
    "build:esm": "tsup src --tsconfig ./tsconfig.json --format esm -d dist --sourcemap inline --dts",
    "build:cjs": "tsup src --tsconfig ./tsconfig.cjs.json --format cjs -d dist --cjsInterop --splitting",
    "build:tsc": "rm -rf ./dist && concurrently 'pnpm:build:tsc-cjs' 'pnpm:build:tsc-esm' 'pnpm:build:tsc-types'",
    "build:tsc-cjs": "tsc -p tsconfig.cjs.json",
    "build:tsc-esm": "tsc -p tsconfig.esm.json",
    "build:tsc-types": "tsc -p tsconfig.types.json",
    "ci": "pnpm build",
    "pack:build": "pnpm build && pnpm pack",
    "start": "node --no-warnings=ExperimentalWarning --loader ts-node/esm ./src/index.ts",
    "start:cjs": "node ./dist/cjs/index.cjs",
    "start:esm": "node ./dist/esm/index.js",
    "clean": "rm -rf node_module dist",
    "test": "jest . --passWithNoTests",
    "test:watch": "jest . --passWithNoTests --watch",
    "test:ci": "jest . --silent --collectCoverage --coverageDirectory='./coverage' --ci --reporters=default --reporters=jest-junit --watchAll=false --passWithNoTests",
    "update:all": "pnpm update --latest",
    "lint:config": "pnpx @eslint/config-inspector@latest --config ./eslint.config.js",
    "lint": "eslint --no-warn-ignored **/*.ts",
    "lint:fix": "eslint --fix --no-warn-ignored **/*.ts"
  },
  "author": "wattry",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/config-inspector": "0.5.6",
    "@eslint/js": "9.15.0",
    "@stylistic/eslint-plugin": "2.11.0",
    "@types/eslint__js": "8.42.3",
    "@types/jest": "29.5.14",
    "@types/node": "22.9.1",
    "concurrently": "9.1.0",
    "eslint": "9.15.0",
    "eslint-plugin-jest": "28.9.0",
    "eslint-plugin-n": "17.14.0",
    "globals": "15.12.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "typescript-eslint": "8.15.0"
  },
  "dependencies": {
    "commander": "12.1.0"
  }
}
